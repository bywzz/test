extends layout

block content
    body.hold-transition.login-page
        div.login-box
            div.login-logo
                a(href="../../index2.html")
                    b Admin
                    |LTE
            div.login-box-body
                p.login-box-msg Sign in to start your session
                form(action="../../index2.html" method="post")
                    div.form-group.has-feedback
                        input(type="email" class="form-control" placeholder="Email")
                        span.glyphicon.glyphicon-envelope.form-control-feedback
                    div.form-group.has-feedback
                        input(type="password" class="form-control" placeholder="Password")
                        span.glyphicon.glyphicon-lock.form-control-feedback
                    div.row
                        div.col-xs-8
                            div.checkbox.icheck
                                label
                                    input(type="checkbox")
                                    |Remember Me
                        div.col-xs-4
                            button(type="submit" class="btn btn-primary btn-block btn-flat") Sign In
                div.social-auth-links.text-center
                    p - OR -
                    a(href="#" class="btn btn-block btn-social btn-facebook btn-flat")
                        i(class="fa fa-facebook")
                        |Sign in using Facebook
                    a(href="#" class="btn btn-block btn-social btn-google btn-flat")
                        i(class="fa fa-google-plus")
                        |Sign in using Google+
                a(href="#") I forgot my password
                br
                a(href="register.html" class="text-center") Register a new membership
        script(type='text/javascript').
            $(function(){
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',    
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' 
                });
            });